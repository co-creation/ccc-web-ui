{
  "name": "ccc-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "checkUpdates": "npx npm-check-updates -i",
    "lint": "find ./src -name \\*.js | xargs eslint --cache --cache-location node_modules/.cache/.eslintcache --report-unused-disable-directives",
    "lintFix": "npm run lint --fix",
    "clean": "rm -fr build",
    "deploy": "npm run clean && npm run build && firebase use cccode && firebase deploy --only hosting:co-creation && npm run clean"
  },
  "dependencies": {
    "@apollo/client": "^3.3.12",
    "@chakra-ui/react": "^1.3.4",
    "@chakra-ui/theme": "^1.7.0",
    "@chakra-ui/theme-tools": "^1.1.0",
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.1.5",
    "@fontsource/poppins": "^4.2.2",
    "@fontsource/nunito-sans": "^4.2.2",
    "@stripe/react-stripe-js": "^1.4.0",
    "@stripe/stripe-js": "^1.13.2",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^13.0.0",
    "airtable": "^0.10.1",
    "framer-motion": "^3.10.5",
    "graphql": "^15.5.0",
    "graphql-tag": "^2.11.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-hook-form": "^6.15.4",
    "react-icons": "^4.2.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "react-split-pane": "^2.0.3",
    "realm-web": "^1.2.1",
    "validator": "^13.5.2",
    "web-vitals": "^1.1.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "space-in-parens": [
        "error",
        "always"
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^7.22.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.2.1"
  }
}
